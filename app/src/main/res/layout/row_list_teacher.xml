<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTeacherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="title"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="10dp"
        android:text="full name"
        android:textColor="#81000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTeacherOIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="oib123456798"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewTeacherAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="address"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewTeacherDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Date"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewTeacherEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="email"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>