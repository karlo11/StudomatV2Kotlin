<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name"
        android:textColor="#81000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewClassISVU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ISVU num"
        android:textColor="#81000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewClassHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Hours"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewClassECTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ECTS"
        android:textColor="#81000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewClassSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Semester"
        android:textColor="#81000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textViewClassDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Details"
        android:textColor="#81000000"
        android:textSize="14sp"
        android:textStyle="normal" />

</LinearLayout>